@model DoleEcIntranet.Models.PicModel.ProveedorModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Ruc</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.rucModal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rucModal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Razon social</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.razonsocialModal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.razonsocialModal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tipo proveedor</label>
            <div class="col-md-12">
               
                @Html.DropDownList("TipoProveedor1", (IEnumerable<SelectListItem>)ViewBag.TipoProveedor1 ?? new List<SelectListItem>(), "- Seleccione tipo proveedor -", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12" style="text-align:right">
                <a href="#" onclick="GrabarProveedor();">  Grabar  </a>
            </div>
        </div>
    </div>
}


