@model DoleEcIntranet.Models.RpgAllModel
<div class="container">

    <nav class="overflow-auto" style="text-align:center">
        <div class="row" style="text-align:center">

            @if (Model.Img.Any())
            {
                
                foreach (var x in Model.Img)
                {
                    <div class="col-md-6" id="@x.Id" style="text-align: center; border-color: red; padding-top: 20px">

                        <a href="@Url.Action("MostrarImagen", "Pic", new { id = x.Id})" target="_blank" style="border-color: red">
                            <img style=' border-color: #2D343D; width: 250px; height: 250px;' id='base64image'
                                 src="data:image/png;base64, @x.file" />
                        </a>

                        <div style="background-color: #2D343D">
                            <button style="border-radius:20px; padding:3px; margin:5px" type="button" onclick="EliminarImagen(@x.Id);" class="btn btn-danger ">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="20" fill="currentColor" style="margin:5px" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                    <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                </svg>
                            </button>
                        </div>

                    </div>
                }



            }
            else
            {
        <div style="text-align:center" class="container">
            <label> No hay imagenes para mostrar</label>
        </div>
                     
            }









        </div>
    </nav>


</div>
