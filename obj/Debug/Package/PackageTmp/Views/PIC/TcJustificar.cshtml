@model DoleEcIntranet.Models.PicModel.EstadCuentaTcViewModel
@{
    ViewBag.Title = "TcJustificar";
}
<style type="text/css">
    #titulo {
        font-size: 34px;
        font-weight: bold
    }

    label {
        color: black
    }

    #Valor {
        height: 10px;
    }

    .error {
        color: red
