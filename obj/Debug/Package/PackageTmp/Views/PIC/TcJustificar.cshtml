</style>
@Styles.Render("~/bundles/alertify/css")

<form id="form">
    <div id="miId" data-mi-id="@Model.EstadCuenta.Id"></div>

    <div class="container">
        <br />
        <div class="row" style="text-align:center">
            <div class="col-md-12">
                <label id="titulo"> Estado de cuenta</label><br />
