@model DoleEcIntranet.Models.DocumentoBajaModel

@{
    ViewBag.Title = "Documento De Baja";
}


<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col">
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="active">Zona Personal</li>

                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Facturación Elect. Perú</h1>
            </div>
        </div>
    </div>
</section>

<div class="container">
    @using (Html.BeginForm("DocumentoDeBaja", "ZonaPersonal", FormMethod.Post, new { encType = "multipart/form-data", novalidate = "novalidate", id = "form1", name="form1" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">



            <div class="col-md-6">
                @Html.LabelFor(model => model.documentFile, htmlAttributes: new { @class = "control-label col-md-3 " })

                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.documentFile, new { @class = "form-control", type = "file", name = "Files", @accept = ".txt" })
                    @Html.ValidationMessageFor(model => model.documentFile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.motivo, htmlAttributes: new { @class = "control-label col-md-3 " })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.motivo, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                    @Html.ValidationMessageFor(model => model.motivo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />
        <br />
        <div class="form-group">
            <div class="row justify-content-center">
                <input type="submit" value="Procesar Documento" class="btn btn-primary" />
            </div>
        </div>
        <br />
        <hr />
        <div class="row">
            <div>
                @Html.ActionLink("Nueva Baja", "DocumentoDeBaja")
            </div>
        </div>

    }
</div>


@section scripts {

    <script type="text/javascript">
        $('#form1').submit(function () {
            $('input[type=submit]', this).attr('disabled', 'disabled');
        });
    </script>
    
    
    
    }