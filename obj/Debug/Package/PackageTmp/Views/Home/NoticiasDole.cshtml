@section scripts{

    @Scripts.Render("~/bundles/calendarspicker")

    <script type="text/javascript">
        //Variables
        var pageSeccion1 = 0;
        var pageSeccion2 = 0;
        var _inCallback1 = false;
        var _inCallback2 = false;


        $(document).ready(function () {

            cargarNoticiasDole(true);

            //Aplicar calendario
            $("#calendars_picker").calendarsPicker({
                calendar: $.calendars.instance('gregorian', 'es')



            });

        });

        //Se cargan las secciones de noticias
        function cargarNoticiasDole(inicioC) {
            if (pageSeccion1 > -1 && !_inCallback1) {
                _inCallback1 = true;
                pageSeccion1++;
                $('div' + "#loading1").html('<p><img src="/Content/img/loading.gif"></p>');
                $.get("/Home/CargarSeccion/", { seccionCat: 1, pagina: pageSeccion1, primeraVez: inicioC }, function (data) {
                    if (data != '') {
                        $("#Seccion1").append(data);
                        if (inicioC) {
                            pageSeccion1 = 0;
                        }

                    }
                    else {
                        pageSeccion1 = -1;
                    }

                    _inCallback1 = false;
                    $('div' + "#loading1").empty();
                });
            }
        }



    </script>


}

