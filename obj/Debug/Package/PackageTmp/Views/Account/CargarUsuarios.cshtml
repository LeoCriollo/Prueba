@using DoleEcIntranet.Models
@model LoadExcel
@{
    ViewBag.Title = "Cargar Usuarios";
}
<div class="container">
    <br />
    <br />
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-5">
            <section id="UsuariosForm">
                @using (Html.BeginForm("CargarUsuarios", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h4>Cargar Usuarios que no existan en el AD.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.file, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.file, "", new { @type = "file", @accept = ".xlsx" })
                            @Html.ValidationMessageFor(m => m.file, "", new { @class = "text-danger" })
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-7">
                            <input type="submit" value="Procesar Archivo" class="btn btn-primary float-right mb-5" data-loading-text="Procesando...">
                        </div>
                    </div>
                  
                 
                }
            </section>
        </div>
        <div class="col-md-3"></div>
      
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
